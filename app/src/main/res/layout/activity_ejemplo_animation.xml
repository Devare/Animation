<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_fondo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.com.devare.animation.EjemploAnimation">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/suelo" />

        <ImageView
            android:id="@+id/iv_rayo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_nube1"
            android:layout_alignStart="@+id/iv_nube2"
            android:layout_marginStart="68dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/rayo" />

        <ImageView
            android:id="@+id/iv_rayo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_nube1"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/iv_rayo1"
            android:visibility="invisible"
            app:srcCompat="@drawable/rayo" />

        <ImageView
            android:id="@+id/iv_nube1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="78dp"
            app:srcCompat="@drawable/animated_nube1" />

        <ImageView
            android:id="@+id/iv_nube2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_nube1"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="26dp"
            app:srcCompat="@drawable/animated_nube2" />

        <ImageView
            android:id="@+id/iv_animation_chico"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/imageView5"
            android:layout_alignParentStart="true"
            android:background="@drawable/animation_frames" />


</RelativeLayout>
