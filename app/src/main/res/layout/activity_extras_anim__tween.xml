<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_extras_anim__tween"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mx.com.devare.animation.ExtrasAnim_Tween">

    <ImageView
        android:id="@+id/iv_anim_tween"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/iv_descripcion"
        android:src="@drawable/androidify_1" />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Animaciones"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/tv_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-13dp"
        android:text="Tween"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anim_clockwise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:background="@drawable/bk_boton_selector"
                android:text="clockwise"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_fade_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="fade in"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_fade_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="fade out"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anim_blink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:padding="20dp"
                android:text="blink"
                android:layout_marginTop="2dp"
                android:background="@drawable/bk_boton_selector"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/btn_anim_move"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="move"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_accelerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="accelerate"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anim_zoom_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:padding="20dp"
                android:text="zoom in"
                android:layout_marginTop="2dp"
                android:background="@drawable/bk_boton_selector"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />


            <Button
                android:id="@+id/btn_anim_zoom_out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="zoom out"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_rotate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:text="rotate"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anim_slide_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="slide up"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_slide_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:padding="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="slide down"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_anim_bounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="bounce"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btn_anim_sequential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="sequential"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
            <Button
                android:id="@+id/btn_anim_together"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="20dp"
                android:textSize="12sp"
                 android:layout_marginTop="2dp"
                android:layout_marginStart="2dp"
                android:background="@drawable/bk_boton_selector"
                android:text="together"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_anim_traslate_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:background="@drawable/bk_boton_selector"
            android:text="traslate right"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_anim_traslate_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:layout_marginStart="2dp"
            android:background="@drawable/bk_boton_selector"
            android:text="traslate left"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
